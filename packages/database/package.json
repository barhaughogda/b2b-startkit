{
  "name": "@startkit/database",
  "version": "0.1.0",
  "private": true,
  "description": "Database layer with Drizzle ORM, Supabase, and RLS policies for StartKit",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./server": "./src/server.ts",
    "./schema": "./src/schema/index.ts",
    "./client": "./src/client.ts",
    "./tenant": "./src/tenant.ts",
    "./migrations": "./src/migrations/index.ts"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:apply-rls": "tsx src/migrations/apply-rls.ts",
    "db:seed": "tsx src/seed.ts"
  },
  "dependencies": {
    "@startkit/config": "workspace:*",
    "drizzle-orm": "^0.38.3",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "drizzle-kit": "^0.30.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
