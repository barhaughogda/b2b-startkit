{
  "name": "b2b-startkit",
  "version": "0.1.0",
  "private": true,
  "description": "B2B SaaS/AaaS Starter Kit - A production-grade foundation for building multiple SaaS products",
  "author": "StartKit",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.1",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules",
    "test": "turbo test",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "create:product": "tsx infra/scripts/create-product.ts",
    "setup:stripe": "tsx infra/scripts/setup-stripe.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@types/node": "^22.10.2",
    "@vitest/ui": "^2.1.8",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
